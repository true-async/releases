{
  "php_version": "8.6",
  "php_is_latest": true,
  "php_src": {
    "repo": "true-async/php-src",
    "branch": "true-async-stable"
  },
  "extensions": {
    "async": {
      "repo": "true-async/php-async",
      "branch": "main",
      "path": "ext/async"
    },
    "xdebug": {
      "repo": "true-async/xdebug",
      "branch": "true-async-86",
      "path": "ext/xdebug"
    }
  },
  "requirements": {
    "libuv": "latest"
  },
  "configure": {
    "common": [
      "--enable-zts",
      "--enable-async",
      "--enable-phpdbg",
      "--enable-bcmath",
      "--enable-calendar",
      "--enable-exif",
      "--enable-ftp",
      "--enable-intl",
      "--enable-mbstring",
      "--enable-pdo",
      "--enable-shmop",
      "--enable-soap",
      "--enable-sockets",
      "--with-bz2",
      "--with-curl",
      "--with-gettext",
      "--with-gmp",
      "--with-mysqli=mysqlnd",
      "--with-openssl",
      "--with-pdo-mysql=mysqlnd",
      "--with-pdo-pgsql",
      "--with-pdo-sqlite",
      "--with-pgsql",
      "--with-sqlite3",
      "--with-xsl",
      "--with-zlib"
    ],
    "linux": [
      "--enable-gd",
      "--with-jpeg",
      "--with-webp",
      "--with-freetype",
      "--with-zip",
      "--with-sodium",
      "--with-readline",
      "--with-tidy",
      "--with-ldap"
    ],
    "windows": [
      "--enable-gd=shared",
      "--with-jpeg",
      "--with-webp",
      "--with-freetype",
      "--enable-debug-pack"
    ]
  }
}
